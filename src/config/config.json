{
  "public": {
    "enabled": true,
    "ssl": false,
    "key": "/cdr/cert/wss.pem",
    "cert": "/cdr/cert/wss.pem",
    "host": "0.0.0.0",
    "port": 10023
  },
  "private": {
    "enabled": true,
    "ssl": false,
    "host": "0.0.0.0",
    "port": 10021
  },
  "archive": {
    "enabled": false,
    "ssl": false,
    "host": "0.0.0.0",
    "port": 10040,
    "login": "xx",
    "password": "xx"
  },

  "replica": {
    "enabled": false,
    "live": true,
    "host": "http://10.10.10.25:10020",
    "cronJob": "1-59/5 * * * * *",
    "cdr": {
      "method": "post",
      "keepAlive": true,
      "path": "/api/v1/cdr",
      "headers": {}
    },
    "files": {
      "method": "post",
      "keepAlive": true,
      "path": "/api/v1/recordings?id=${uuid}&name=${name}&type=${type}&domain=${domain}",
      "headers": {}
    },
    "auth": {
      "type": "base",
      "login": "igor",
      "password": "yo"
    },
    "headers": {}
  },

  "mongodb": {
    "uri": "mongodb://pre.webitel.com:27017/webitel",
    "collectionCDR": "cdr",
    "collectionFile": "cdrFile",
    "collectionAuth": "authToken",
    "collectionEmail": "emailConfig",
    "collectionDomain": "domains",
    "collectionMedia": "mediaFile",
    "collectionReplica": "replica",
    "collectionAgentStatus": "agentStatus"
  },

  "application": {
    "loglevel": "trace",
    "auth": {
      "tokenSecretKey": "myDevKey",
      "expiresDays": 7
    }
  },

  "recordFile": {
    "defaultProvider": "local",
    "maskPath": "$DOMAIN/$Y/$M/$D/$H",

    "providers": {
      "b2": {
        "accountId" : "xx",
        "bucketId" : "xx",
        "applicationKey" : "xx",
        "bucketName" : "xx"
      },
      "local": {
        "fileRoot": "/tmp/archive/"
      }
    }
  },

  "mediaFile": {
    "maxFieldsSizeMB": 5,
    "defaultProvider": "local",
    "maskPath": "/media/$DOMAIN",

    "providers": {
      "b2": {
        "accountId" : "xx",
        "bucketId" : "xx",
        "applicationKey" : "xx",
        "bucketName" : "xx"
      },
      "local": {
        "fileRoot": "/tmp/"
      }
    }
  },

  "uploadAcl": {
    "mode": "allow",
    "ip": "0.0.0.0/0"
  }
}